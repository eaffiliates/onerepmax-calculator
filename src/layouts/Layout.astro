---
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
}

const { title, description, canonical } = Astro.props;
const currentUrl = canonical || Astro.url.href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="1RM calculator, one rep max, strength training, powerlifting, bench press, squat, deadlift, strength calculator" />
    <meta name="author" content="OneRepMax" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://1rmcalculate.com/og-default.png" />
    <meta property="og:site_name" content="OneRepMax" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://1rmcalculate.com/og-default.png" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />
    
    <title>{title}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "OneRepMax Calculator",
      "description": description,
      "url": currentUrl,
      "applicationCategory": "HealthApplication",
      "operatingSystem": "Web Browser",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "potentialAction": {
        "@type": "UseAction",
        "target": currentUrl
      },
      "featureList": [
        "1RM Calculator",
        "Multiple Formula Support",
        "Warm-up Recommendations",
        "Strength Standards",
        "Form Guidelines"
      ]
    })} />
    
    <ViewTransitions />
  </head>
  <body class="font-['Inter'] antialiased">
    <slot />
    
    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12 mt-16">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- About Section -->
          <div>
            <h3 class="text-xl font-semibold mb-4">OneRepMax</h3>
            <p class="text-gray-300 text-sm leading-relaxed">
              Your trusted source for accurate 1RM calculations and strength training guidance. 
              Built with proven formulas and safety-first principles.
            </p>
          </div>
          
          <!-- Quick Links -->
          <div>
            <h3 class="text-xl font-semibold mb-4">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/" class="text-gray-300 hover:text-white transition-colors duration-200">Home</a></li>
              <li><a href="/bench-press-1rm-calculator/" class="text-gray-300 hover:text-white transition-colors duration-200">Bench Press Calculator</a></li>
              <li><a href="/deadlift-1rm-calculator/" class="text-gray-300 hover:text-white transition-colors duration-200">Deadlift Calculator</a></li>
              <li><a href="/squat-1rm-calculator/" class="text-gray-300 hover:text-white transition-colors duration-200">Squat Calculator</a></li>
            </ul>
          </div>
          
          <!-- Learn More -->
          <div>
            <h3 class="text-xl font-semibold mb-4">Learn More</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/how-to-calculate-1rm/" class="text-gray-300 hover:text-white transition-colors duration-200">How to Calculate 1RM</a></li>
              <li><a href="/formulas/" class="text-gray-300 hover:text-white transition-colors duration-200">Formula Explanations</a></li>
              <li><a href="/faq/" class="text-gray-300 hover:text-white transition-colors duration-200">FAQ</a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-700 mt-8 pt-8 text-center">
          <p class="text-gray-400 text-sm">
            © 2024 OneRepMax. Built with ❤️ for the strength training community.
          </p>
        </div>
      </div>
    </footer>
    
    <!-- Vercel Analytics -->
  </body>
</html>